{
    "manifest_version": 3,
    "name": "PassVault",
    "description": "A simple password manager extension",
    "version": "1.0",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "cookies",
        "http://localhost:5000"
    ],
    "background": {
        "service_worker": "dist/background.js"
    }
}
